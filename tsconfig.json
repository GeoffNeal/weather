{
  "compilerOptions": {
    "jsx": "react-jsx",
    "rootDirs": ["server", "client"],
    "outDir": "dist",
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["server", "client"],
  "exclude": ["node_modules", "**/__tests__/*", "dist", "server/generated", "server/stubs"]
}
